<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">


    <!--todos:<%= Micropost.count %>
    do user:<%= Micropost.where(user_id: @user.id).count %>-->

    <%= render 'follow_form' if signed_in? %>

    <% if @user.microposts.any? %>
      <h3>Microposts</h3>
      <span class="timestamp">(Total: <%= @user.microposts.count %>)</span>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
      no microposts found...<br />
      Count: <%= @user.microposts.count %>
    <% end %>
  </div>
</div>